    <%= f.label :job %><br />
    <%  %>
    <%= collection_select(:event, :job, @jobs, :id, :name, {:prompt => true}) %>  
  </div>
  <div class="field">
    <%= f.label :type %><br />
    <%= select(:event, :type, @types, {:prompt => true}) %> 
  </div>
  <div class="field">
    <%= f.label :punchtime %><br />
    <%= f.number_field :punchtime %>
  </div>
  <div class="field">
    <%= f.label :log %><br />
    <%= f.text_area :log %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
